<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/style_card_front"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:background="@color/red_200"
        android:gravity="center"
        android:text="Style front side"
        android:textAlignment="center"
        android:alpha="0"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flip_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/style_card_back"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:background="@color/red_500"
        android:gravity="center"
        android:text="Style back side"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flip_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poses_card_front"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="Poses front side"
        android:textAlignment="center"
        android:alpha="0"
        android:textSize="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flip_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/poses_card_back"
        android:layout_width="190dp"
        android:layout_height="300dp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:text="Poses back side"
        android:textAlignment="center"
        android:textSize="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flip_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/spin_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>