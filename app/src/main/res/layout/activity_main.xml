<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/styles_easy_flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flipDuration="500"
        app:flipOnTouch="false"
        app:flipType="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_button"
        app:layout_constraintTop_toTopOf="parent" >

        <include layout="@layout/style_card_back"/>
        <include layout="@layout/style_card_front"/>
    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/poses_easy_flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flipDuration="500"
        app:flipOnTouch="false"
        app:flipType="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_button"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/pose_card_back"/>
        <include layout="@layout/pose_card_front"/>
    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/spin_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>